{
  "name": "node-mono",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "setup": "yarn install; yarn registry:unlink; yarn registry:link; yarn link:all;",
    "registry:unlink": "yarn workspaces run unlink",
    "registry:link": "yarn workspaces run link",
    "link:all": "yarn workspaces run link:deps",
    "reset": "yarn registry:unlink; yarn workspaces run reset;",
    "start": "yarn workspaces run start",
    "build": "yarn workspaces run build"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.28.3",
    "rimraf": "^3.0.2"
  }
}
